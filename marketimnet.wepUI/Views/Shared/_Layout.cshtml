@using marketimnet.Core.Entities
@using System.Text.Json
@using System.Text.Json.Serialization
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Marketimnet</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    <link rel="icon" type="image/png" sizes="32x32" href="~/img/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/img/favicon-16x16.png">
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/marketimnet.wepUI.styles.css" asp-append-version="true" />
    <!-- Font Awesome -->
    <link href="~/Admin/startbootstrap-sb-admin-2-gh-pages/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <!-- Toastr CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)

    <style>
        html {
            position: relative;
            min-height: 100%;
        }
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            margin: 0;
            padding-bottom: 200px; /* Footer yüksekliği kadar padding */
        }
        main {
            flex: 1 0 auto;
            width: 100%;
            padding-bottom: 2rem;
        }
        .main-content {
            margin-bottom: 2rem;
        }
        .footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            border-top: 2px solid #dee2e6;
            background-color: #f8f9fa;
            padding: 20px 0;
            height: 200px;
        }
        .footer-content {
            padding: 10px 0;
        }
        .auth-container {
            min-height: calc(100vh - 400px);
            padding: 40px 0;
        }
        .auth-card {
            margin-bottom: 40px;
        }
        .navbar {
            padding: 1rem 0;
        }
        .navbar-brand {
            display: flex;
            align-items: center;
        }
        .navbar-brand img {
            height: 40px;
            width: auto;
            min-width: 200px;
            transition: transform 0.3s ease;
        }
        .navbar-brand .brand-text {
            font-size: 1.5rem;
            font-weight: 600;
            color: #333;
            margin-left: 0.5rem;
        }
        .navbar-brand:hover img {
            transform: scale(1.05);
        }
        .nav-link {
            font-weight: 500;
            padding: 0.5rem 1rem !important;
            transition: color 0.3s ease;
        }
        .nav-link:hover {
            color: #0d6efd !important;
        }
        .cart-btn {
            position: relative;
            padding: 0.5rem 1rem;
            transition: all 0.3s ease;
        }
        .cart-btn:hover {
            transform: translateY(-2px);
        }
        .cart-badge {
            position: absolute;
            top: -8px;
            right: -8px;
            font-size: 0.75rem;
            padding: 0.25rem 0.5rem;
        }
        .auth-buttons .btn {
            padding: 0.5rem 1rem;
            transition: all 0.3s ease;
        }
        .auth-buttons .btn:hover {
            transform: translateY(-2px);
        }
        .footer img {
            height: 45px;
            width: auto;
            min-width: 200px;
            margin-bottom: 0.5rem;
        }
        .footer h6 {
            font-weight: 600;
            margin-bottom: 0.8rem;
            font-size: 1rem;
        }
        .footer .nav-link {
            padding: 0.2rem 0; /* Link'ler arası boşluğu azalttık */
            font-size: 1rem;
        }
        .footer .social-links {
            margin-top: 0.5rem;
        }
        .footer .social-links a {
            font-size: 1.5rem;
            margin-right: 1rem;
            color: #6c757d;
            transition: color 0.3s ease;
        }
        .footer .social-links a:hover {
            color: #0d6efd;
        }
        .dropdown-submenu {
            position: relative;
        }

        .dropdown-submenu .dropdown-menu {
            top: 0;
            left: 100%;
            margin-top: -1px;
        }

        .dropdown-submenu:hover > .dropdown-menu {
            display: block;
        }

        .dropdown-submenu > a:after {
            display: block;
            content: " ";
            float: right;
            width: 0;
            height: 0;
            border-color: transparent;
            border-style: solid;
            border-width: 5px 0 5px 5px;
            border-left-color: #cccccc;
            margin-top: 5px;
            margin-right: -10px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo.svg" alt="Marketimnet" class="me-2">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="categoryDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-grid me-1"></i>Kategoriler
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="categoryDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Category" asp-action="Index">
                                        <i class="bi bi-grid-3x3-gap me-2"></i>Tüm Kategoriler
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                @await Component.InvokeAsync("CategoryMenu")
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Products" asp-action="Discounted">
                                <i class="bi bi-tag-fill me-1"></i>İndirimli Ürünler
                            </a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center">
                        <a href="/Cart" class="btn btn-outline-primary position-relative me-3">
                            <i class="fas fa-shopping-cart"></i>
                            <span id="cartCount" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                @{
                                    var cartJson = Context.Session.GetString("Cart");
                                    var options = new JsonSerializerOptions
                                    {
                                        PropertyNameCaseInsensitive = true,
                                        ReferenceHandler = ReferenceHandler.Preserve
                                    };
                                    var cartItems = string.IsNullOrEmpty(cartJson)
                                        ? new List<CartItem>()
                                        : JsonSerializer.Deserialize<List<CartItem>>(cartJson, options);
                                    @(cartItems?.Sum(x => x.Quantity) ?? 0)
                                }
                            </span>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <!-- Sidebar içeriği buraya gelecek -->
                    </div>
                    <div class="col-md-9">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </main>
    </div>

    <footer class="footer">
        <div class="container footer-content">
            <div class="row">
                <div class="col-12 col-md-4 mb-2">
                    <div class="d-flex flex-column">
                        <img src="~/img/logo.svg" alt="Marketimnet" class="mb-2">
                        <p class="text-muted mb-2">Güvenli alışverişin adresi</p>
                        <div class="social-links">
                            <a href="#" class="me-2"><i class="fab fa-facebook"></i></a>
                            <a href="#" class="me-2"><i class="fab fa-instagram"></i></a>
                            <a href="#" class="me-2"><i class="fab fa-twitter"></i></a>
                        </div>
                    </div>
                </div>
                <div class="col-6 col-md-2 mb-2">
                    <h6>Kurumsal</h6>
                    <ul class="nav flex-column">
                        <li class="nav-item"><a href="#" class="nav-link p-0 text-muted">Hakkımızda</a></li>
                        <li class="nav-item"><a href="#" class="nav-link p-0 text-muted">Kariyer</a></li>
                        <li class="nav-item"><a href="#" class="nav-link p-0 text-muted">İletişim</a></li>
                    </ul>
                </div>
                <div class="col-6 col-md-2 mb-2">
                    <h6>Yardım</h6>
                    <ul class="nav flex-column">
                        <li class="nav-item"><a href="#" class="nav-link p-0 text-muted">Sıkça Sorulan Sorular</a></li>
                        <li class="nav-item"><a href="#" class="nav-link p-0 text-muted">Kargo Takip</a></li>
                        <li class="nav-item"><a href="#" class="nav-link p-0 text-muted">İade Şartları</a></li>
                    </ul>
                </div>
            </div>
            <div class="border-top mt-2 pt-2 text-center">
                <p class="mb-0">&copy; @DateTime.Now.Year - Marketimnet - Tüm hakları saklıdır.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function() {
            $('.dropdown-submenu a.dropdown-toggle').on("click", function(e) {
                $(this).next('ul').toggle();
                e.stopPropagation();
                e.preventDefault();
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            var connection = new signalR.HubConnectionBuilder()
                .withUrl("/notificationHub")
                .withAutomaticReconnect()
                .build();

            connection.on("ReceiveCartNotification", function (message, cartCount) {
                // Update cart count in navbar
                $('#cartCount').text(cartCount);
                
                // Show notification
                Swal.fire({
                    title: 'Sepet Güncellendi!',
                    text: message,
                    icon: 'success',
                    showConfirmButton: false,
                    timer: 1500
                });
            });

            connection.on("ReceiveOrderNotification", function (message) {
                Swal.fire({
                    title: 'Sipariş Bildirimi',
                    text: message,
                    icon: 'info',
                    showConfirmButton: true
                });
            });

            connection.start()
                .then(function () {
                    console.log("SignalR bağlantısı başarılı");
                })
                .catch(function (err) {
                    console.error("SignalR bağlantı hatası:", err);
                });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Configure toastr defaults
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "timeOut": "5000"
        };
        
        // Show toastr message if exists
        @if (TempData["ToastrMessage"] != null)
        {
            <text>
            toastr['@TempData["ToastrType"]']('@TempData["ToastrMessage"]');
            </text>
        }
    </script>
</body>
</html>
