@using Microsoft.AspNetCore.Http

@if (Context.Session.GetString("UserId") != null)
{
    <div class="d-flex">
        <a class="btn btn-outline-primary me-2" href="/Account/Profile">
            <i class="fas fa-user me-1"></i>Hesabım
        </a>
        <form method="post" action="/Account/Logout" class="d-inline">
            <button type="submit" class="btn btn-outline-danger">
                <i class="fas fa-sign-out-alt me-1"></i>Çıkış
            </button>
        </form>
    </div>
}
else
{
    <div class="d-flex">
        <a class="btn btn-outline-primary me-2" href="/Account/Login">
            <i class="fas fa-sign-in-alt me-1"></i>Giriş
        </a>
        <a class="btn btn-primary" href="/Account/Register">
            <i class="fas fa-user-plus me-1"></i>Kayıt Ol
        </a>
    </div>
} 