@{
    ViewData["Title"] = "Kullanıcılar";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Kullanıcılar</h1>
    <p class="mb-4">Tüm kullanıcıları burada yönetebilirsiniz.</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Kullanıcı Listesi</h6>
            <a href="/Admin/Users/Create" class="btn btn-primary btn-sm float-right">
                <i class="fas fa-plus"></i> Yeni Kullanıcı
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Ad Soyad</th>
                            <th>E-posta</th>
                            <th>Telefon</th>
                            <th>Rol</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>Admin Admin</td>
                            <td>admin@marketimnet.com</td>
                            <td>+90 555 555 5555</td>
                            <td><span class="badge badge-primary">Admin</span></td>
                            <td><span class="badge badge-success">Aktif</span></td>
                            <td>
                                <a href="/Admin/Users/Edit/1" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="/Admin/Users/Delete/1" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Page level plugins -->
    <script src="~/Admin/startbootstrap-sb-admin-2-gh-pages/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Admin/startbootstrap-sb-admin-2-gh-pages/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/Admin/startbootstrap-sb-admin-2-gh-pages/js/demo/datatables-demo.js"></script>
} 